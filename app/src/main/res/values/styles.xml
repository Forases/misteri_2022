<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="btn_menu">
        <item name="android:background">#910101</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="btn_menu.main">
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@color/misteri_yellow</item>
    </style>
    <style name="btn_menu_text">
        <item name="android:textColor">#212121</item>
         <item name="android:gravity">center</item>
    </style>
    <style name="btn_menu_text.title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/playfairdisplay_black</item>
        <item name="android:textColor">@color/misteri_black</item>
    </style>
    <style name="btn_menu_text.subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
